// prisma/schema.prisma
// Refined & validated schema (complete)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ----------------------------- Enums -----------------------------
 */

enum Role {
  VIEWER
  EDITOR
  ADMIN
}

enum Channel {
  SMS
  WHATSAPP
  EMAIL
  TWITTER
  MESSENGER
}

enum ActivityType {
  LOGIN
  PROFILE_CHANGE
  OTHER
}

enum Direction {
  INBOUND
  OUTBOUND
}

/**
 * ----------------------------- Models -----------------------------
 */

/**
 * Activity log for user actions / auditing
 */
model ActivityLog {
  id        String       @id @default(cuid())
  userId    String
  type      ActivityType
  meta      Json? // optional metadata (e.g., IP, provider, diff)
  createdAt DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

/**
 * Phone OTPs (temporary)
 */
model PhoneOtp {
  id        String   @id @default(cuid())
  phone     String // expected E.164 when possible
  otp       String
  used      Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone])
}

/**
 * Email OTPs
 */
model EmailOtp {
  id        String   @id @default(cuid())
  email     String
  otp       String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

/**
 * ----------------------------- User/Auth -----------------------------
 */

/**
 * Core user model.
 */
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  passwordHash  String?
  provider      String   @default("email") // "email" | "google" | "github" | ...
  providerId    String? // general provider account id
  googleSub     String? // Google's subject id (sub) if available
  emailVerified Boolean  @default(false)
  role          Role     @default(VIEWER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  // Non-owning side of the 1:1 relation (Profile owns the FK)
  profile Profile?

  // NextAuth / app relations
  accounts         Account[]
  sessions         Session[]
  threads          Thread[]           @relation("UserThreads") // threads created by this user
  messages         Message[]          @relation("UserMessages") // messages sent by this user
  teamMember       TeamMember[]
  scheduledMessage ScheduledMessage[]
  activityLog      ActivityLog[]

  @@unique([googleSub])
}

/**
 * Profile model (owning side of 1:1 relation with User)
 */
model Profile {
  id               String    @id @default(cuid())
  userId           String    @unique
  displayName      String?
  avatarUrl        String?
  bio              String?
  metadata         Json?
  phoneNumber      String?
  phoneVerified    Boolean   @default(false)
  phoneVerifiedAt  DateTime?
  gender           String?
  countryGeonameId Int?
  countryCode      String?
  countryName      String?
  stateGeonameId   Int?
  stateName        String?
  timezone         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Profile owns the FK to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/**
 * ----------------------------- NextAuth-compatible models -----------------------------
 */

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/**
 * ----------------------------- Messaging / Contact models -----------------------------
 */

/**
 * Contact (external person)
 */
model Contact {
  id            String   @id @default(cuid())
  name          String?
  phone         String?  @unique
  phoneVerified Boolean  @default(false)
  email         String?  @unique
  emailVerified Boolean  @default(false)
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  // Relations
  threads Thread[]  @relation("contact_threads")
  notes   Note[]
  Message Message[]

  @@index([phone])
  @@index([email])
}

/**
 * Thread groups messages for a contact
 */
model Thread {
  id        String  @id @default(cuid())
  contactId String
  creatorId String? // user who created the thread (optional)

  contact Contact @relation("contact_threads", fields: [contactId], references: [id], onDelete: Cascade)
  creator User?   @relation("UserThreads", fields: [creatorId], references: [id], onDelete: SetNull)

  messages  Message[]
  scheduled ScheduledMessage[]
  status    String             @default("open")
  lastAt    DateTime           @updatedAt
  createdAt DateTime           @default(now())

  @@index([contactId])
  @@index([lastAt])
}

/**
 * Message model
 */
model Message {
  id          String    @id @default(cuid())
  threadId    String
  contactId   String?
  senderId    String?
  from        String?
  to          String?
  channel     Channel
  body        String
  externalId  String? // provider's id (e.g., Twilio SID, email message-id)
  direction   Direction
  metadata    Json?
  deliveredAt DateTime?
  sendAt      DateTime?
  sentAt      DateTime?
  createdAt   DateTime  @default(now())

  thread  Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  contact Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)
  sender  User?    @relation("UserMessages", fields: [senderId], references: [id], onDelete: SetNull)

  @@index([threadId])
  @@index([externalId])
  @@index([sendAt])
}

/**
 * ----------------------------- Notes / Teams -----------------------------
 */

model Note {
  id        String   @id @default(cuid())
  contactId String
  body      String
  createdBy String?
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
}

model Team {
  id        String       @id @default(cuid())
  name      String
  members   TeamMember[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt
}

/**
 * Team membership
 */
model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

/**
 * ----------------------------- Scheduled messages -----------------------------
 */

model ScheduledMessage {
  id        String   @id @default(cuid())
  threadId  String
  senderId  String?
  body      String
  channel   Channel
  sendAt    DateTime
  status    String   @default("scheduled") // scheduled | sent | failed | cancelled
  metadata  Json?
  createdAt DateTime @default(now())

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  sender User?  @relation(fields: [senderId], references: [id], onDelete: SetNull)

  @@index([sendAt])
  @@index([status])
}
